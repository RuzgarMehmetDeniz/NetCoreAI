@model List<NetCoreAI.Project02_ApiConsumeUI.Dtos.ResultCustomerDto>
@{
    Layout = null;
    int count = 0;
}
<a href="~/lib/bootstrap/dist/css/bootstrap.css.map"></a>
<a href="~/lib/bootstrap/dist/css/bootstrap.min.css.map"></a>
<a href="~/lib/bootstrap/dist/css/bootstrap.rtl.css.map"></a>
<a href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css.map"></a>
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Müşteri Adı Soyadı</th>
            <th>Bakiye</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach(var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.CustomerName @item.CustomerSurname</td>
                <td>@item.CustomerBalance</td>
                <td><a href="/Customer/DeleteCustomer/@item.CustomerID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Customer/UpdateCustomer/@item.CustomerID" class="btn btn-success">Güncelle</a></td>
            </tr>            
        }
    </table>
    <td><a href="/Customer/CreateCustomer/" class="btn btn-success">Yeni Müşteri Girişi</a></td>


</div>
